<div class= "container">
    <h1>수정하는 페이지입니다.</h1>
    <form action = "/update/<%= @upd_post.id %>" method = "POST">
      <br>
      <div class="form-group">
        <label for="inputTitle">제목</label>
        <input type="text" value= <%= @upd_post.title %> name = "title" class="form-control" id="inputTitle" aria-describedby="emailHelp" placeholder="제목을 입력해주세요">
      </div>
      <div class="form-group">
        <label for="inputContent">내용</label>
        <textarea class="form-control" name = "content" rows="5" id="comment" placeholder= "내용을 입력해주세요"><%= @upd_post.content %></textarea>
      </div>
      <div class="form-group">
        <label for="inputEditor">작성자</label>
        <input type="text" value= <%= @upd_post.editor %> name = "editor" class="form-control" id="inputEditor" aria-describedby="emailHelp" placeholder="이름을 입력해주세요">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


    
    
    
    
    